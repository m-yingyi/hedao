
























/*每个页面公共css */
page, ._div, ._dl, ._dt, ._dd, ._ul, ._ol, ._li, ._h1, ._h2, ._h3, ._h4, ._h5, ._h6, ._pre, ._code, form, ._fieldset, ._legend, input, textarea, ._p, ._blockquote, ._th, ._td, ._hr, button, ._article, ._aside, ._details, ._figcaption, ._figure, ._footer, ._header, hgroup, ._menu, ._nav, ._section, sumary {
    margin: 0;
    padding: 0;
}
._a, ._a:link, ._a:visited, ._a:hover, ._a:active, ._a:focus {
    text-decoration: none;
}
input, ._select, textarea {
    -webkit-appearance: none;
}
._ol, ._ul {
    list-style: none;
}
.txtgray {
    color: #999;
    font-weight: normal;
}
.flex {
	display: flex;
}
.align-center{
	align-items: center;
}
.justify-between{
	justify-content: space-between;
}
.justify-center{
	justify-content: center;
}
.theme-color{
	color: #37a2f2 !important;
}
.theme-bg-color {
	background-color: #37a2f2 !important;
	color: white !important;
}
.no-data {
	font-size: 28rpx;
	color: #999999;
	text-align: center;
	padding: 88rpx 0;
}
.bg-white {
	background-color: #fff !important;
}

