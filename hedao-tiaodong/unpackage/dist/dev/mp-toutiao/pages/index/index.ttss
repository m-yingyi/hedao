._figure {
    position: relative;
    margin: 0 0 32rpx 0;
    width: 100%;
    height: auto;
    padding: 0 20rpx;
    box-sizing: border-box;
    z-index: 2;
}
._figure .photoBox {
    display: flex;
    position: relative;
    align-items: center;
    margin-right: 20rpx;
    border: none;
    padding: 0;
    margin-bottom: 0;
	font-size: 28rpx;
}
.contentWrap {
    justify-content: space-between;
    font-size: 28rpx;
    display: flex;
    position: relative;
    align-items: center;
    margin-right: 20rpx;
    height: 100rpx;
}
.contentHeadImg, .contentFootImg, .contentShareWrap{
    display: flex;
    align-items: center;
    font-size: 24rpx;
}
.contentHeadImg ._img, .contentFootImg ._img {
    border-radius: 50%;
    height: 65rpx;
    width: 65rpx;
    margin-right: 16rpx;
}
.contentFootImg ._img{
    width: 40rpx;
    height: 40rpx;
    margin-right: -6rpx;
    border: 1rpx solid white;
}
.contentFootImg ._span {
    margin-left: 24rpx;
}
.contentPreViews ._img {
    width: 100%;
}
.contentUserWrap {
    height: 82rpx;
}
.contentShareWrap ._img {
    width: 42rpx;
    height: 42rpx;
    margin-left: 52rpx;
}
.contentShareWrap .btnHeart {
	width: 48rpx;
    height: 42rpx;
}
.btn-like {
    font-size: 28rpx;
    margin-left: 12rpx;
}
.copyAddr {
    position: fixed;
    top: -1100rpx;
}
.supportNum {
    display: block;
    color: #999999;
    font-size: 24rpx;
    padding-top: 12rpx;
    padding-left: 2rpx;
}
.addItem {
    color: #333333;
    font-size: 28rpx;
    padding-left: 2rpx;
    padding-top: 4rpx;
    font-weight: bold;
    word-break: break-all;
}
.contentPreViews .previewsNum {
    position: absolute;
    right: 36rpx;
    top: 36rpx;
    border-radius: 30rpx;
    background: rgba(0,0,0,0.5);
    width: 70rpx;
    height: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 24rpx;
}
.contentPreViews {
    position: relative;
    width: calc(100% + 54rpx);
    margin-left: -36rpx;
    height: auto;
}
.cont-pre-img {
    width: 100%;
}
.content {
    height: 100vh;
}
/* 未登录 */
.noLogin {
    font-size: 28rpx;
    display: flex;
    align-items: center;
    height: 100%;
    justify-content: center;
}
.noLogin view {
    text-align: center;
    color: #999999;
}
.noLogin text {
    color: #296ead;
    margin-left: 10rpx;
}

